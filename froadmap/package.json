{
  "name": "froadmap",
  "version": "0.0.2",
  "private": true,
  "description": "Your features roadmap, but simple ðŸ’‹",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build",
    "release-sentry": "remix build --sourcemap && node ./node_modules/@sentry/remix/scripts/sentry-upload-sourcemaps.js && rm ./public/**/*.map",
    "dev": "NODE_ENV=production run-p dev:*",
    "dev:remix": "remix dev",
    "dev:css": "tailwindcss -w -i ./app/styles/tailwind.css -o ./app/styles/tailwind-compiled.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve build",
    "clean-build-and-cache": "rm -rf ./.cache && rm -rf ./build && rm -rf ./public/build",
    "clean": "npm run clean-build-and-cache && npm install && npm run postinstall"
  },
  "prettier": {
    "printWidth": 120,
    "tailwindConfig": "./tailwind.config.js"
  },
  "eslintConfig": {
    "extends": [
      "@remix-run/eslint-config",
      "@remix-run/eslint-config/node",
      "prettier"
    ]
  },
  "eslintIgnore": [
    "/node_modules",
    "/server/build",
    "/public/build"
  ],
  "dependencies": {
    "@headlessui/react": "^1.7.7",
    "@remix-run/node": "^1.11.1",
    "@remix-run/react": "^1.11.1",
    "@remix-run/serve": "^1.11.1",
    "@sentry/remix": "^7.35.0",
    "aws-sdk": "^2.1277.0",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.7",
    "dialog-polyfill": "^0.5.6",
    "isbot": "^3.6.5",
    "mongoose": "^6.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-select": "^5.7.0",
    "remix-utils": "^6.0.0",
    "slugify": "^1.6.5",
    "smoothscroll-polyfill": "^0.4.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.11.1",
    "@remix-run/eslint-config": "^1.11.1",
    "@sentry/cli": "^2.10.0",
    "@tailwindcss/line-clamp": "^0.4.2",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.20",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "^3.2.4"
  },
  "engines": {
    "node": ">=14"
  }
}
